{
  "name": "Reparams",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "ReParams",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon32.png",
    "128": "icons/icon192.png"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.bundle.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "clipboardWrite",
    "activeTab"
  ]
}
